<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pagina Inicial</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    
</head>
<body style="background-image:url(https://images.unsplash.com/photo-1490818387583-1baba5e638af?auto=format&fit=crop&w=931&q=60&ixid=dW5zcGxhc2guY29tOzs7Ozs%3D); background-size:cover">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            </div>
            <div class="navbar-collapse" style="background-color:white">
                <img src="~/Content/Images/Logo.PNG" alt="Logotipo" align="middle" style="float:left" />
                <ul class="nav navbar-nav" style="padding-left:200px">
                    
                    <li style="font-size:30px">@Html.ActionLink("Página inicial", "Index", "Home")</li>
                    <li style="font-size:30px">@Html.ActionLink("Sobre nós", "About", "Home")</li>
                    <li style="font-size:30px">@Html.ActionLink("Forum", "Index", "Forum")</li>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <li>@Html.ActionLink("Objectivos", "Index", "Objectivoes")</li>
                    
                    }
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>


    <div class="container-fluid body-content" >
        
            @RenderBody()
            @*<hr />*@
            @*<footer>
                <p>@*&copy;*@  @*- My ASP.NET Application</p>*@
                @*</footer>*@
            </div>
        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

</html>
@*navbar-collapse collapse*@