<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pagina Inicial</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image:url(http://www.bellacor.com/media.bellacor.com/images/1500/2140134720131.jpg); min-height:100vh">
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:white">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            </div>
            <div class="navbar-collapse" style="background-color:white">
                <img src="~/Content/Images/Logo.PNG" alt="Logotipo" align="middle" style="float:left" />
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Pagina Inicial", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sobre Nos", "About", "Home")</li>
                    <li>@Html.ActionLink("Objectivos", "Index", "Objectivoes")</li>
                    <li>@Html.ActionLink("Forum", "Index", "Forum")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container-fluid body-content" style="background-image:url(http://www.bellacor.com/media.bellacor.com/images/1500/2140134720131.jpg)">
        <div class="container body-content" style="background-color:white">
            @RenderBody()
            @*<hr />*@
            @*<footer>
                <p>@*&copy;*@  @*- My ASP.NET Application</p>*@
                @*</footer>*@
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>

</html>
@*navbar-collapse collapse*@