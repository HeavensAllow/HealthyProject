                                <p id="Count" style="height:500px; width: 100%; position:absolute; left:3750px;"></p>
                            }
                        }
                    }
                    else
                    {
                        if (ViewBag.Favoritos != null)
                        {
                            <p id="Favoritos" style="height:500px; width: 100%; position:absolute; left:2500px;"></p>
