@section Scripts{
    <script type="text/javascript">
        window.onload = function () {

            @if (ViewBag.TooSoon == null && ViewBag.DataPoints != null)
            {
                <text>
            var chart1 = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                text: "Objectivo Actual"
            },

            toolTip: {
                shared: true
            },

            axisY: {
                minimum: @Html.Raw(ViewBag.IMath)-750,
                maximum: @Html.Raw(ViewBag.IMath)+750,
                interlacedColor: "#F0F8FF",
                title: "Intake diário"
    },

    axisX: {
        title: "Dia da semana",
    },

        data: [{
            type: "column",
            showInLegend: true,
            name: "IDA",
            legendText: "Intake Diário Submetido",
            dataPoints: @Html.Raw(ViewBag.DataPoints),
    },
        {
            type: "line",
            showInLegend: true,
            name: "IDR",
            legendText: "Intake Diário Recomendado",
            dataPoints: @Html.Raw(ViewBag.IntakeR),
        }]
            });
            chart1.render();
            </text>
                        }

                        var chart2 = new CanvasJS.Chart("Totalkg", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                            text: "Evolução do Peso desde o registo"
            },

            toolTip: {
                            shared: true
            },

            axisY: {
                            interlacedColor: "#F0F8FF",
                title: "Peso"
            },

            axisX: {
                            title: "Data",
             },

            data: [
                {
                            type: "line",
                showInLegend: true,
                name: "Peso",
                legendText: "Peso por data",
                dataPoints: @Html.Raw(ViewBag.Total),
                }]
            });
            chart2.render();

                    var chart3 = new CanvasJS.Chart("NrObjectivos", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                text: "Nr de Objectivos"
            },

            toolTip: {
                shared: true
            },

            axisY: {
                interlacedColor: "#F0F8FF",
                title: "Numero de objectivos"
            },

            axisX: {
                title: "Objectivos",
             },

            data: [
                {
                type: "column",
                showInLegend: false,
                name: "Número",
                legendText: "Número de objectivos",
                dataPoints: @Html.Raw(ViewBag.Object),
                }]
            });
                    chart3.render();

            @if(ViewBag.Registos != null)
            {
                <text>

                var chart4 = new CanvasJS.Chart("Totalkcal", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                    text: "Kcal registadas por dia"
            },

            toolTip: {
                    shared: true
            },

            axisY: {
                    interlacedColor: "#F0F8FF",
                title: "Kcal"
            },

            axisX: {
                    title: "Data",
             },

            data: [{
                    type: "line",
                showInLegend: true,
                name: "Kcal",
                legendText: "Kcal por data",
                dataPoints: @Html.Raw(ViewBag.Registos),
                }]
            });
            chart4.render();
            </text>
            }
             @if(ViewBag.Favoritos != null)
            {
                <text>

                var chart5 = new CanvasJS.Chart("Favoritos", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                    text: "Pratos favoritos"
            },

            toolTip: {
                    shared: true
            },

            axisY: {
                interlacedColor: "#F0F8FF",
                title: "Numero de vezes ingerida"
            },

            axisX: {
                title: "Prato",
             },

            data: [{
                type: "column",
                showInLegend: false,
                name: "Numero de vezes ingeridas",
                legendText: "Top 5 pratos",
                dataPoints: @Html.Raw(ViewBag.Favoritos),
                }]
            });
            chart5.render();
            </text>
            }
             @if(ViewBag.Count != null)
            {
                <text>

            var chart6 = new CanvasJS.Chart("Count", {
            animationEnabled: true,
            backgroundColor: "#ffffff",
            title: {
                    text: "Total de dias com/sem objectivos"
            },

            toolTip: {
                    shared: true
            },

            axisY: {
                interlacedColor: "#F0F8FF",
                title: "Numero de dias"
            },

            axisX: {
                    title: "Objectivo",
             },

            data: [{
                type: "column",
                showInLegend: true,
                name: "Numero de dias",
                legendText: "Numero de dias com/sem objectivos",
                dataPoints: @Html.Raw(ViewBag.Count),
                }]
            });
            chart6.render();
            </text>
            }
            }
        $(function () {
            var div = 1;
            var max = $('.slidediv').children("p").length;
            $("#btnright").click(function () {
                if (div + 1 > max) return;
                div++;
                $('.slidediv').children().animate({ left:  '-=1250px' });
            });
            $("#btnleft").click(function () {
                if (div - 1 < 1) return;
                div--;
                $('.slidediv').children().animate({ left: '+=1250px' });
            });
            $('body').on('click', '.modal-link', function (e) {
                e.preventDefault();
                $(this).attr('data-target', '#modal-container');
                $(this).attr('data-toggle', 'modal');
            });
        });
    </script>
    <script src="@Url.Content("~/Content/canvasjs.min.js")"></script>
    <script src="@Url.Content("~/Content/jquery.canvasjs.min.js")"></script>
}
