@model IEnumerable<HealthyProject.Models.Categoria>
</br>
</br>
@{
    ViewBag.Title = "Categoria";
}

<table class="table">
    <tr style="background-color:orange; text-align:center; font-size:large">
        <th style="text-align:left; text-align:center">
            @Html.DisplayNameFor(model => model.Nome)
        </th>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:center">
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td style="text-align:center">
            @Html.ActionLink("Editar", "Edit", new { id=item.CategoriaID })
           
        </td>
    </tr>
}

</table>
