@model HealthyProject.Models.Categoria
</br>
</br>
@{
    ViewBag.Title = "Nova categoria";
}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label class="control-label col-md-2" for="Nome" style="text-align:center; color:steelblue; font-size:large">Nome da categoria</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="btn btn-default" style="border-radius:12px; font-size:large; font-style:unset; background-color: #e6d338;box-shadow: 0 9px rgba(0, 0, 0, 0.63)" />
        </div>
    </div>



}
<div>
    @Html.ActionLink("Regressar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

