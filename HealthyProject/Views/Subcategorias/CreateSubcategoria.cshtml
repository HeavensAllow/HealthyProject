@model HealthyProject.Models.Subcategoria
</br>
</br>
@{
    ViewBag.Title = "Nova Subcategoria";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group" style="text-align:center">
        <label class="control-label col-md-2" for="Nome" style="font-size:large; color:steelblue">Subcategoria</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group" style="font-size:large;text-align:center; color:steelblue">
        @Html.Label("CategoriaID", "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("CategoriaID", new SelectList(ViewBag.Categorias, "Value", "Text"), new { @class = "form-control" })
        </div>
    </div>
    <br />
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar" class="mybtn btn-default " />
        </div>
    </div>


}
<div>
    @Html.ActionLink("Regressar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
