@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Nova subcategoria", "createSubcategoria", "Subcategorias");
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.SubcategoriaID })
