@model HealthyProject.Models.RefeicaoIngrediente

@{
    ViewBag.Title = "Create";
}

<!--<h2>Create</h2>-->


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    

    <div class="form-horizontal">
        <h4>Ingrediente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.RefeicaoID, "Refeição", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @ViewBag.Refeicao.Tipo
                @*@Html.DropDownList("RefeicaoID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RefeicaoID, "", new { @class = "text-danger" })*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Categoria, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Categoria", null, htmlAttributes: new { @class = "form-control selectedCategoria", @id = "SelectedCategoria"})
                @Html.ValidationMessageFor(model => model.Categoria, "", new { @class = "text-danger" })
            </div>
        </div>

        <script type="text/javascript">
            $(function () {
                $("#SelectedCategoria").change(function () {
                    var val = $(this).val();
                    var subItems="";
                    $.getJSON("@Url.Action("GetIngredientes", "RefeicaoIngredientes")", { categoria: val }, function (data) {
                        $.each(data, function (index, item) {
                            subItems += "<option value='" + item.Value + "'>" + item.Text + "</option>"
                        });
                        $("#IngredienteID").html(subItems)
                    });
                });
            });
        </script>

        <div class="form-group">
            @Html.LabelFor(model => model.IngredienteID, "Ingrediente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IngredienteID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IngredienteID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantidade, "Quantidade (gr)", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regressar", "Index", "Refeicoes")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
